@model IEnumerable<MiniProject.Models.GoalTracker>

@{
    ViewData["Title"] = "Index";
}

<h1>Goal Traker</h1>

<p>
    <a class="btn btn-primary"asp-action="Create">Create Goal</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discriptin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsComplete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discriptin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsComplete)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.GoalId">Edit</a> |
                    <a class="btn btn-success"  asp-action="Details" asp-route-id="@item.GoalId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.GoalId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
